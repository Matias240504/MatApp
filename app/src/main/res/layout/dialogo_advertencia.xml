<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:radius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_aviso"
        android:gravity="center"
        android:padding="20dp">

        <!-- Título del Aviso -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aviso de Aplicativo"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:paddingBottom="5dp"/>

        <!-- Mensaje -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debe Agregar por lo menos el Nombre, Apellido y Telefono"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:paddingBottom="15dp"/>

        <!-- Imagen de Confirmación -->
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginBottom="10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="validacion.json" />

        <Button
            android:id="@+id/btnEntendidoCliente"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Entendido"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
